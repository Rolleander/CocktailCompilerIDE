
# The executable to produce:
MAIN		= scan

# Source files
SRC_C		= ..\src\main.c
SRC_H		=
SRC		= ..\src\test.rex

# Generated files
GEN_C		= l_scan.c l_scanSource.c
GEN_H		= l_scan.h l_scanSource.h
GEN		=

###############################################################################

include config.mk

###############################################################################

# Create your scanner
all: $(MAIN)

###############################################################################

# Generate the scanner
l_scan.c: l.rex
	rex -cdis -y  l.rex
	rm -f l_scanDrv.c

# These files are generated by REX too:
l_scan.h: 	l_scan.c
l_scanSource.c: l_scan.c
l_scanSource.h: l_scan.c

###############################################################################

include common.mk

