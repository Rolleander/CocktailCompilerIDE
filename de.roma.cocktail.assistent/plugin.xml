      <category
            name="Compiler"
            id="Compiler Wizards">
      </category>
      <wizard
            category="Compiler Wizards"
            class="de.roma.cocktail.assistent.wizards.NewWizard"
            icon="icons/newprj_wiz.gif" 
            id="de.roma.cocktail.assistent.wizards.NewWizard"
            name="Compiler Projekt">
      </wizard>
      <wizard
            category="Compiler Wizards"
            class="de.roma.cocktail.assistent.wizards.NewRPPWizard"
            icon="icons/new_con.gif" 
            id="de.roma.cocktail.assistent.wizards.NewRPPWizard"
            name="Scanner Spezifikation">
      </wizard>
      <wizard
            category="Compiler Wizards"
            class="de.roma.cocktail.assistent.wizards.NewLPPWizard"
            icon="icons/new_con.gif" 
            id="de.roma.cocktail.assistent.wizards.NewLPPWizard"
            name="Parser Spezifikation">
      </wizard>
   </extension>
